<% layout('layouts/boilerplate')%>

<h1>All Markets</h1>
<div>
    <a href="/markets/new">Add Market</a>
</div>
<% for (let market of markets){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=market.Img%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= market.MarketName %> </h5>
                <p class="card-text"><%= market.Description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= market.StreetAddress%></small>
                </p>
                <a class="btn btn-primary" href="/markets/<%=market._id%>">View <%=market.MarketName%></a>
            </div>
        </div>
    </div>
</div>
<% }%>